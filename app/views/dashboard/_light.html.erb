<div class="black-box">
  <div class="tab-header">Light/Plant Position</div>
  <div class="padded">
    <div id="raphael-lights-overhead"></div>
    <table style="width:240px;" class="led-levels">
      <tr>
        <td width="20%"></td>
        <td width="20%">Off</td>
        <td width="20%" align="left">1/3</td>
        <td width="20%"align="right">2/3</td>
        <td width="20%"align="right">Full</td>
      </tr>
    <% 6.times do |i| %>
      <tr>
        <td width="10%">
          <b>Array <%= i+1 %> </b>
        </td>
        <td colspan="4"> 
          <div class="led-array-container">
            <span class="pull-right value"></span><br />
            <div id="eps-light-slider-<%= i %>" data-led-index="<%= i %>" class="slider led-slider"></div>
          </div>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>

